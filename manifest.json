{
  "manifest_version": 3,
  "name": "SenseNote",
  "version": "1.0",
  "description": "Capture, annotate, and organize text from any webpage",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "icons/*.svg",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}